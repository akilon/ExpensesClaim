<% include ../header.ejs %>

<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title"><%=title %></h3>
    </div>
</div>

<div class="panel-body">

    <div class="container" ng-app="ProgressModule" ng-controller="EditController">
        <% include validationSummary.ejs %>
        <form class="navbar-form navbar-left">
            <div class="row">
                <div class="form-group">
                    <label for="">Paint usage</label>
                    <input type="text"
                           class="form-control"
                           placeholder="eg.100"
                           ng-model="progress.total_paint"
                           style="width:100%"
                           required
                    >
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label for="">Man power</label>
                    <input type="text"
                           class="form-control"
                           placeholder="eg. 2"
                           ng-model="progress.total_manpower"
                           style="width:100%"
                           required
                    >
                </div>                
            </div>

            <div class="row">
                <div class="form-group">
                    <label for="">Metresquare</label>
                    <input type="text"
                           class="form-control"
                           placeholder="eg.5"
                           ng-model="progress.total_metresquare"
                           style="width:100%"
                           required
                    >
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label for="">Remarks</label>
                    <textarea type="text"
                              class="form-control"
                              placeholder="Please provide some remarks"
                              rows="5"
                              cols="30"
                              ng-model="progress.remarks"
                              style="width:100%"
                              required
                    ></textarea>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <button
                            type="button"
                            class="btn btn-primary"
                            ng-click="saveForm(progress)"
                            >Edit Project</button>
                </div>
            </div>

        </form>

    </div>
</div>

<script src="/javascripts/app/progress/Module.js"></script>
<script src="/javascripts/app/progress/Service.js"></script>
<script src="/javascripts/app/progress/ValidationService.js"></script>
<script src="/javascripts/app/progress/EditController.js"></script>
<% include ../footer.ejs %>